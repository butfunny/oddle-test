.auto-complete {
  position relative;

  .input-search {
    border-bottom 1px solid #dedede;
    position relative;

    .search-icon {
      position absolute;
      top: 50%;
      left 15px;
      transform translate(0, -50%);
      fill #BEC0C9;
    }

    .loading-icon {
      position absolute;
      top: 50%;
      right 15px;
      transform translate(0, -50%);
      fill #BEC0C9;
    }

    .input-control {
      padding 15px 10px;
      width 100%;
      border: 0;
      outline none;
      font-size 18px;
      padding-left 50px;
      padding-right 50px;
      border-radius 7px;
    }
  }

  .search-results {
    padding 10px;

    .result-sub-title {
      font-size 13px;
      font-weight 500;
      color #989DA5;
      padding-bottom 10px;
      padding-left 10px;
    }

    .results-wrapper {
      .result-item {
        padding 10px;
        font-size 16px;
        border-radius 7px;
        cursor pointer;
        position: relative;

        .enter-text {
          position absolute;
          right 15px;
          top: 50%;
          transform translate(0, -50%);
          font-size 13px;
          color #989da5;
          font-weight bold;
          opacity 0;
        }

        &.no-select {
          cursor text;
          background white !important;
        }

        &:hover {
          background #EDEFF2;

          .enter-text {
            opacity 1;
          }
        }
      }
    }

    .more-results {
      font-size 14px;
      padding 10px;
      color #989DA5;

      transition background .2s;
      cursor pointer;
      border-radius 7px;

      &:hover {
        background #EDEFF2;
      }

    }
  }
}
